{
  "manifest_version": 3,
  "name": "RecorderPhone (Domain Tracker)",
  "version": "0.1.0",
  "description": "Domain-level active tab tracking for RecorderPhone (sends only hostname by default).",
  "permissions": ["tabs", "storage", "alarms"],
  "host_permissions": ["http://127.0.0.1:*/*", "http://localhost:*/*"],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "RecorderPhone",
    "default_popup": "popup.html"
  }
}

