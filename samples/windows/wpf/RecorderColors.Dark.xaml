<!-- RecorderPhone â€” WPF colors (Dark theme) -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Colors -->
  <Color x:Key="ColorBg0">#FF0B0F1A</Color>
  <Color x:Key="ColorBg1">#FF0F1624</Color>
  <Color x:Key="ColorSurface0">#FF111A2B</Color>
  <Color x:Key="ColorSurface1">#FF162238</Color>
  <Color x:Key="ColorBorder0">#FF22314D</Color>

  <Color x:Key="ColorText0">#FFF3F6FF</Color>
  <Color x:Key="ColorText1">#FFC7D0E0</Color>
  <Color x:Key="ColorText2">#FF93A3BD</Color>

  <Color x:Key="ColorAccent0">#FF2F80ED</Color>
  <Color x:Key="ColorAccent1">#FF1B5FD6</Color>
  <Color x:Key="ColorAccentSoft">#2E2F80ED</Color> <!-- 18% alpha -->

  <Color x:Key="ColorSuccess">#FF22C55E</Color>
  <Color x:Key="ColorWarning">#FFF59E0B</Color>
  <Color x:Key="ColorDanger">#FFEF4444</Color>
  <Color x:Key="ColorInfo">#FF38BDF8</Color>

  <!-- Brushes -->
  <SolidColorBrush x:Key="BrushBg0" Color="{StaticResource ColorBg0}" />
  <SolidColorBrush x:Key="BrushBg1" Color="{StaticResource ColorBg1}" />
  <SolidColorBrush x:Key="BrushSurface0" Color="{StaticResource ColorSurface0}" />
  <SolidColorBrush x:Key="BrushSurface1" Color="{StaticResource ColorSurface1}" />
  <SolidColorBrush x:Key="BrushBorder0" Color="{StaticResource ColorBorder0}" />

  <SolidColorBrush x:Key="BrushText0" Color="{StaticResource ColorText0}" />
  <SolidColorBrush x:Key="BrushText1" Color="{StaticResource ColorText1}" />
  <SolidColorBrush x:Key="BrushText2" Color="{StaticResource ColorText2}" />

  <SolidColorBrush x:Key="BrushAccent0" Color="{StaticResource ColorAccent0}" />
  <SolidColorBrush x:Key="BrushAccent1" Color="{StaticResource ColorAccent1}" />
  <SolidColorBrush x:Key="BrushAccentSoft" Color="{StaticResource ColorAccentSoft}" />

  <SolidColorBrush x:Key="BrushSuccess" Color="{StaticResource ColorSuccess}" />
  <SolidColorBrush x:Key="BrushWarning" Color="{StaticResource ColorWarning}" />
  <SolidColorBrush x:Key="BrushDanger" Color="{StaticResource ColorDanger}" />
  <SolidColorBrush x:Key="BrushInfo" Color="{StaticResource ColorInfo}" />

</ResourceDictionary>

