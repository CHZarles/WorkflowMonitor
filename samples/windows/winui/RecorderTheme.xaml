<!--
  RecorderPhone â€” WinUI 3 ResourceDictionary template

  Source of truth:
  - ../../../design-tokens.json

  Usage (App.xaml):
    <Application.Resources>
      <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
          <ResourceDictionary Source="ms-appx:///Themes/RecorderTheme.xaml" />
        </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
    </Application.Resources>
-->
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Non-color tokens -->
  <x:Double x:Key="Space1">4</x:Double>
  <x:Double x:Key="Space2">8</x:Double>
  <x:Double x:Key="Space3">12</x:Double>
  <x:Double x:Key="Space4">16</x:Double>
  <x:Double x:Key="Space5">20</x:Double>
  <x:Double x:Key="Space6">24</x:Double>
  <x:Double x:Key="Space8">32</x:Double>

  <CornerRadius x:Key="RadiusS">8</CornerRadius>
  <CornerRadius x:Key="RadiusM">12</CornerRadius>
  <CornerRadius x:Key="RadiusL">16</CornerRadius>

  <Thickness x:Key="PaddingCard">16</Thickness>
  <Thickness x:Key="PaddingSheet">20</Thickness>
  <Thickness x:Key="PaddingButton">12,8</Thickness>

  <x:Double x:Key="FontSizeDisplay">22</x:Double>
  <x:Double x:Key="FontSizeTitle">18</x:Double>
  <x:Double x:Key="FontSizeBody">15</x:Double>
  <x:Double x:Key="FontSizeCaption">13</x:Double>

  <x:Double x:Key="MotionShortMs">140</x:Double>
  <x:Double x:Key="MotionMediumMs">220</x:Double>

  <ResourceDictionary.ThemeDictionaries>
    <!-- Light -->
    <ResourceDictionary x:Key="Light">
      <!-- Colors -->
      <Color x:Key="ColorBg0">#FFFFFFFF</Color>
      <Color x:Key="ColorBg1">#FFF6F7F9</Color>
      <Color x:Key="ColorSurface0">#FFFFFFFF</Color>
      <Color x:Key="ColorSurface1">#FFF2F3F5</Color>
      <Color x:Key="ColorBorder0">#FFE6E8EC</Color>

      <Color x:Key="ColorText0">#FF0B0F1A</Color>
      <Color x:Key="ColorText1">#FF3B4252</Color>
      <Color x:Key="ColorText2">#FF6B7280</Color>

      <Color x:Key="ColorAccent0">#FF2F80ED</Color>
      <Color x:Key="ColorAccent1">#FF1B5FD6</Color>
      <Color x:Key="ColorAccentSoft">#1F2F80ED</Color>

      <Color x:Key="ColorSuccess">#FF22C55E</Color>
      <Color x:Key="ColorWarning">#FFF59E0B</Color>
      <Color x:Key="ColorDanger">#FFEF4444</Color>
      <Color x:Key="ColorInfo">#FF38BDF8</Color>

      <!-- Brushes -->
      <SolidColorBrush x:Key="BrushBg0" Color="{StaticResource ColorBg0}" />
      <SolidColorBrush x:Key="BrushBg1" Color="{StaticResource ColorBg1}" />
      <SolidColorBrush x:Key="BrushSurface0" Color="{StaticResource ColorSurface0}" />
      <SolidColorBrush x:Key="BrushSurface1" Color="{StaticResource ColorSurface1}" />
      <SolidColorBrush x:Key="BrushBorder0" Color="{StaticResource ColorBorder0}" />

      <SolidColorBrush x:Key="BrushText0" Color="{StaticResource ColorText0}" />
      <SolidColorBrush x:Key="BrushText1" Color="{StaticResource ColorText1}" />
      <SolidColorBrush x:Key="BrushText2" Color="{StaticResource ColorText2}" />

      <SolidColorBrush x:Key="BrushAccent0" Color="{StaticResource ColorAccent0}" />
      <SolidColorBrush x:Key="BrushAccent1" Color="{StaticResource ColorAccent1}" />
      <SolidColorBrush x:Key="BrushAccentSoft" Color="{StaticResource ColorAccentSoft}" />

      <SolidColorBrush x:Key="BrushSuccess" Color="{StaticResource ColorSuccess}" />
      <SolidColorBrush x:Key="BrushWarning" Color="{StaticResource ColorWarning}" />
      <SolidColorBrush x:Key="BrushDanger" Color="{StaticResource ColorDanger}" />
      <SolidColorBrush x:Key="BrushInfo" Color="{StaticResource ColorInfo}" />
    </ResourceDictionary>

    <!-- Dark -->
    <ResourceDictionary x:Key="Dark">
      <!-- Colors -->
      <Color x:Key="ColorBg0">#FF0B0F1A</Color>
      <Color x:Key="ColorBg1">#FF0F1624</Color>
      <Color x:Key="ColorSurface0">#FF111A2B</Color>
      <Color x:Key="ColorSurface1">#FF162238</Color>
      <Color x:Key="ColorBorder0">#FF22314D</Color>

      <Color x:Key="ColorText0">#FFF3F6FF</Color>
      <Color x:Key="ColorText1">#FFC7D0E0</Color>
      <Color x:Key="ColorText2">#FF93A3BD</Color>

      <Color x:Key="ColorAccent0">#FF2F80ED</Color>
      <Color x:Key="ColorAccent1">#FF1B5FD6</Color>
      <Color x:Key="ColorAccentSoft">#2E2F80ED</Color>

      <Color x:Key="ColorSuccess">#FF22C55E</Color>
      <Color x:Key="ColorWarning">#FFF59E0B</Color>
      <Color x:Key="ColorDanger">#FFEF4444</Color>
      <Color x:Key="ColorInfo">#FF38BDF8</Color>

      <!-- Brushes -->
      <SolidColorBrush x:Key="BrushBg0" Color="{StaticResource ColorBg0}" />
      <SolidColorBrush x:Key="BrushBg1" Color="{StaticResource ColorBg1}" />
      <SolidColorBrush x:Key="BrushSurface0" Color="{StaticResource ColorSurface0}" />
      <SolidColorBrush x:Key="BrushSurface1" Color="{StaticResource ColorSurface1}" />
      <SolidColorBrush x:Key="BrushBorder0" Color="{StaticResource ColorBorder0}" />

      <SolidColorBrush x:Key="BrushText0" Color="{StaticResource ColorText0}" />
      <SolidColorBrush x:Key="BrushText1" Color="{StaticResource ColorText1}" />
      <SolidColorBrush x:Key="BrushText2" Color="{StaticResource ColorText2}" />

      <SolidColorBrush x:Key="BrushAccent0" Color="{StaticResource ColorAccent0}" />
      <SolidColorBrush x:Key="BrushAccent1" Color="{StaticResource ColorAccent1}" />
      <SolidColorBrush x:Key="BrushAccentSoft" Color="{StaticResource ColorAccentSoft}" />

      <SolidColorBrush x:Key="BrushSuccess" Color="{StaticResource ColorSuccess}" />
      <SolidColorBrush x:Key="BrushWarning" Color="{StaticResource ColorWarning}" />
      <SolidColorBrush x:Key="BrushDanger" Color="{StaticResource ColorDanger}" />
      <SolidColorBrush x:Key="BrushInfo" Color="{StaticResource ColorInfo}" />
    </ResourceDictionary>
  </ResourceDictionary.ThemeDictionaries>

  <!-- Example styles -->
  <Style x:Key="BlockCardBorderStyle" TargetType="Border">
    <Setter Property="Background" Value="{ThemeResource BrushSurface0}" />
    <Setter Property="BorderBrush" Value="{ThemeResource BrushBorder0}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="{StaticResource RadiusM}" />
    <Setter Property="Padding" Value="{StaticResource PaddingCard}" />
  </Style>

  <Style x:Key="PrimaryButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="{ThemeResource BrushAccent0}" />
    <Setter Property="Foreground" Value="White" />
    <Setter Property="CornerRadius" Value="{StaticResource RadiusM}" />
    <Setter Property="Padding" Value="{StaticResource PaddingButton}" />
  </Style>

  <Style x:Key="TextDisplayStyle" TargetType="TextBlock">
    <Setter Property="FontSize" Value="{StaticResource FontSizeDisplay}" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Foreground" Value="{ThemeResource BrushText0}" />
  </Style>

</ResourceDictionary>

