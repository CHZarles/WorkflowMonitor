<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.recorderphone.android_usage">
    <!--
      UsageStats access is granted via Settings â†’ "Usage access" (AppOps), but
      declaring this permission ensures the app appears in that settings list on
      OEM ROMs that hide apps which didn't request it.
    -->
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
</manifest>
